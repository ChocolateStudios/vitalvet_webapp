---
import BaseForm from '@/contexts/_shared/client/presentation/components/forms/base-form.component.astro';
import { getGridClasses } from '@/contexts/_shared/client/utils/tailwind-helpers';

export interface Props {
    id?: string;
    dataset?: any;
    cols?: number;
    lgCols?: number;
    smCols?: number;
    editMode?: boolean;
}

const {
    id,
    dataset,
    cols,
    lgCols,
    smCols,
    editMode,
} = Astro.props as Props;

const classList = getGridClasses({ cols, smCols, lgCols });
---

<BaseForm 
    id={id} 
    class:list={classList} 
    dataset={dataset}
    editMode={editMode}
>
    <slot/>
</BaseForm>
