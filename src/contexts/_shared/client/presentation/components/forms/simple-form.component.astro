---
import BaseForm from '@/contexts/_shared/client/presentation/components/forms/base-form.component.astro';

export interface Props {
    id?: string;
    dataset?: any;
    class?: string | (string | Record<string, any>)[];
    editMode?: boolean;
}

const {
    id,
    dataset,
    class: className,
    editMode,
} = Astro.props as Props;
---

<BaseForm id={id} class:list={[className, "flex justify-center flex-col"]} dataset={dataset} editMode={editMode}>
    <slot/>
</BaseForm>