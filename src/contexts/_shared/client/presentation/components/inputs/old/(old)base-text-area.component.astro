---
export interface Props {
    id: string;
    name: string;
    label: string;
    value?: string;
    placeholder?: string;
    rows?: number;
    class?: string;
}

const { id, name, label, value = "", placeholder = "", rows = 2, class: className } = Astro.props;
---
<div class={`flex flex-col gap-1 ${className}`}>
    <label for={id} class="block text-sm font-medium leading-6 text-gray-900">{label}</label>
    <textarea id={id} name={name} rows={rows} class="block w-full rounded-md border-0 p-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#6faab5] sm:text-sm sm:leading-6" placeholder={placeholder}>{value}</textarea>
    <div id={`${id}-error-container`} class="text-xs text-red-500 min-h-[1rem]"></div>
</div>