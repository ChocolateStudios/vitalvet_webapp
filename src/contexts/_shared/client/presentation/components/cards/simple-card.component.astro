---
import type { HTMLAttributes } from "astro/types";

type Props = {
	colSpan?: "1" | "2" | "3" | "4" | "5" | "6" | "full";
	lgColSpan?: "1" | "2" | "3" | "4" | "5" | "6" | "full";
} & HTMLAttributes<"div">;

const { colSpan, lgColSpan, class: className, ...rest } = Astro.props;

const colSpanClasses = {
	"1": "col-span-1",
	"2": "col-span-2",
	"3": "col-span-3",
	"4": "col-span-4",
	"5": "col-span-5",
	"6": "col-span-6",
	full: "col-span-full",
};

const lgColSpanClasses = {
	"1": "lg:col-span-1",
	"2": "lg:col-span-2",
	"3": "lg:col-span-3",
	"4": "lg:col-span-4",
	"5": "lg:col-span-5",
	"6": "lg:col-span-6",
	full: "lg:col-span-full",
};
---

<div
	{...rest}
	class:list={[
		"bg-white rounded-xl shadow-lg p-8",
		colSpan && colSpanClasses[colSpan],
		lgColSpan && lgColSpanClasses[lgColSpan],
		className,
	]}
>
	<slot />
</div>