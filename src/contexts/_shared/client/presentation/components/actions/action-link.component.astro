---
import { actionStyles } from '@/contexts/_shared/client/presentation/components/actions/_action-constants';

export interface Props {
  style?: 'submit' | 'danger' | 'default';
  id?: string;
  href?: string;
  disabled?: boolean;
}

const {
  style = "default",
  id,
  href,
  disabled = false,
} = Astro.props as Props;
---

<a 
    id={id} 
    href={href}
    class:list={actionStyles(style)} 
>
    <slot />
</a>

