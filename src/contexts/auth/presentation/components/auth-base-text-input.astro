---

const { id, name, type, autocomplete, placeholder, label, class: className = "" } = Astro.props;

---

<div class=`flex flex-col ${className}`>
    <label for={id} class="text-sm/6 font-medium text-gray-900">{label}</label>
    <div class="mt-2">
        <input {id} {name} {type} {autocomplete} {placeholder} class="w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-800 sm:text-sm/6" />
    </div>
    <div id={`${id}-error-container`} class="mt-1 text-sm text-red-600 h-4"></div>
</div>