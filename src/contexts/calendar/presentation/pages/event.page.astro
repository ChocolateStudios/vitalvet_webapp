---
import CalendarBaseTextInput from "../components/calendar-base-text-input.component.astro"

const { eventId = -1 } = Astro.props;

const inputFields = [
    {
        id: "title",
        name: "title",
        type: "text",
        autocomplete: "title",
        label: "Título",
    },
    {
        id: "start",
        name: "start",
        type: "datetime-local",
        autocomplete: "start",
        label: "Inicio",
    },
    {
        id: "end",
        name: "end",
        type: "datetime-local",
        autocomplete: "end",
        label: "Fin",
    },
    {
        id: "description",
        name: "description",
        type: "text",
        autocomplete: "description",
        label: "Descripción",
    }
]
---

<div class="p-8 flex flex-col gap-8">
    <h2 class="text-2xl font-bold">Nuevo evento</h2>
    <form class="flex flex-row gap-10 w-[80%]">
        <div class="flex-3">
            {
                inputFields.map(fields => 
                    <CalendarBaseTextInput {...fields} />
                )
            }
        </div>
        <div class="flex-1">
            <h3>Notificaciones</h3>
            <button>Añadir notificación</button>
        </div>
    </form>
</div>