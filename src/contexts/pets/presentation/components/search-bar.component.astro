---
import SearchIcon from "../../../_shared/presentation/components/icons/SearchIcon.astro";

const { id, name, placeholder = "Buscar...", class: className } = Astro.props;
---
<div class:list={["relative", className]}>
    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
        <SearchIcon class="h-5 w-5 text-gray-400" />
    </div>
    <input
        type="search"
        {id}
        {name}
        class="block w-full rounded-md border-0 py-1.5 pl-10 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6"
        {placeholder}
    />
</div>