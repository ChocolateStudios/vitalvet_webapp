---
import BaseModal from "@/contexts/_shared/client/presentation/components/base-modal.component.astro";
// import BaseTextInput from "@/contexts/_shared/client/presentation/components/base-text-input.component.astro";
import DynamicInput from "@/contexts/_shared/client/presentation/components/inputs/dynamic-input.component.astro";

const profileInputs = [
    {
        id: "species-name",
        name: "species-name",
        type: "text",
        autocomplete: "species-name",
        label: "Nombre",
    },
]
---
<BaseModal id="species-modal" title="Agregar nueva especie">
    <form slot="body" id="species-form" novalidate>
        {
            profileInputs.map(input => 
                <DynamicInput {...input} />
            )
        }
    </form>
    <div slot="footer">
        <button id='species-submit-button' type="button" class="inline-flex w-full justify-center rounded-md bg-[#6faab5] px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-[#5f9ea8] sm:w-auto">Agregar especie</button>
        <button type="button" data-modal-close class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancelar</button>
    </div>
</BaseModal>

<script>
    import { SaveSpeciesResource } from "@/contexts/pets/server/interfaces/api/resources/save-species.resource";
    // import { updateProfile } from "@/contexts/profiles/client/usecases/update-profile.usecase";
    import { createSpecies } from "@/contexts/pets/client/usecases/create-species-subspecies.usecase";

    function initializePageScripts() {
        const form = document.getElementById('species-form') as HTMLFormElement | null;

        if (form) {
            const nameInput = document.getElementById('species-name') as HTMLInputElement;
            const submitButton = document.getElementById('species-submit-button') as HTMLButtonElement;
            const formError = document.getElementById('species-form-error') as HTMLDivElement;

            // Habilita el botón de envío una vez que el script se ha cargado.
            if (submitButton) {
                submitButton.disabled = false;
            }

            // const isNewOwner = !form.dataset.profileId;
            const isNewSpecies = true;

            const showError = (input: HTMLInputElement, message: string) => {
                const errorContainer = document.getElementById(`${input.id}-error-container`);
                if (errorContainer) {
                    errorContainer.textContent = message;
                }
                // Cambia el color del borde del input a rojo
                input.classList.remove('outline-gray-300', 'focus:outline-blue-800');
                input.classList.add('outline-red-500', 'focus:outline-red-500');
            }

            const clearError = (input: HTMLInputElement) => {
                const errorContainer = document.getElementById(`${input.id}-error-container`);
                if (errorContainer) {
                    errorContainer.textContent = '';
                }
                // Restaura el color del borde del input
                input.classList.remove('outline-red-500', 'focus:outline-red-500');
                input.classList.add('outline-gray-300', 'focus:outline-blue-800');
            }

            // form.addEventListener('submit', async (event) => {
            submitButton.addEventListener('click', async (event) => {
                // console.log('clicked')
                event.preventDefault();

                // Limpia errores previos
                clearError(nameInput);
                if (formError) {
                    formError.textContent = '';
                }

                const name = nameInput.value;

                let isValid = true;

                // Validaciones
                if (!name) {
                    showError(nameInput, 'El nombre es obligatorio');
                    isValid = false;
                } else if (name.length < 3) {
                    showError(nameInput, 'El nombre debe tener al menos 3 caracteres');
                    isValid = false;
                }

                if (isValid) {
                    submitButton.disabled = true;

                    const resource = new SaveSpeciesResource(name);

                    if (isNewSpecies) {
                        submitButton.textContent = 'Agregando especie...';

                        try {
                            const response = await createSpecies(resource);
                            if (response.success && response.data) {
                                // 1. Dispara un evento con los datos de la nueva especie para que la página principal lo escuche
                                document.dispatchEvent(new CustomEvent('species-created', {
                                    detail: { newSpecies: response.data }
                                }));

                                // 2. Dispara un evento para cerrar este modal específico
                                document.dispatchEvent(new CustomEvent('close-modal-by-id', {
                                    detail: { id: 'species-modal' }
                                }));

                                // 3. Limpia el formulario para la próxima vez
                                form.reset();
                                [nameInput].forEach(clearError);

                            } else {
                                formError.textContent = response.errorMessage ?? 'Error al agregar especie. Por favor, inténtalo de nuevo.';
                            }
                        } catch (error) {
                            console.error('Error al agregar especie:', error);
                            formError.textContent = 'Error al agregar especie. Por favor, inténtalo de nuevo.';
                        } finally {
                            submitButton.disabled = false;
                            submitButton.textContent = 'Agregar especie';
                        }
                    } else {
                        submitButton.textContent = 'Actualizando especie...';
                        // TODO
                        // try {
                        //     const response = await updateProfile(profileId, resource);
                        //     if (response.success) {
                        //         // window.location.reload();
                        //         // window.location.href = '/app/home';
                        //         // TODO: close modal
                        //     } else {
                        //         formError.textContent = response.errorMessage ?? 'Error al actualizar el especie. Por favor, inténtalo de nuevo.';
                        //     }
                        // } catch (error) {
                        //     console.error('Error al actualizar el especie:', error);
                        //     formError.textContent = 'Error al actualizar el especie. Por favor, inténtalo de nuevo.';
                        // } finally {
                        //     submitButton.disabled = false;
                        //     submitButton.textContent = 'Guardar cambios';
                        // }
                    }
                }
            });
        }
    }

    // Ejecuta los scripts en la carga inicial de la página (con View Transitions) 
    // y en cada navegación del lado del cliente.
    document.addEventListener('astro:page-load', initializePageScripts);

</script>